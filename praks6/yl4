#!/bin/bash

#!/bin/bash

# Sisestatud arvu k체sime kasutajalt
echo -n "Sisesta arv: "
read arv

# Kontrollime, kas arv on 0 v천i 1
if [ $arv -eq 0 -o $arv -eq 1 ]; then
    echo "$arv ei ole algarv"
else
    jagaja=2
    jaak=$(($arv % $jagaja))

    # Jagame arvu j채rjestikuste jagajatega
    while [ $jaak -ne 0 ]; do
        jagaja=$(($jagaja + 1))
        jaak=$(($arv % $jagaja))
    done

    # Kontrollime, kas jagaja on v천rdne sisestatud arvuga
    if [ $arv -eq $jagaja ]; then
        echo "$arv on algarv"
    else
        echo "$arv ei ole algarv"
    fi
fi
